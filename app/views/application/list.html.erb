<div class="table_all">
  <table class="product_table">
    <tr>
      <th>Produto</th>
      <th>Preço</th>
    </tr>
    <% unless @renderme.nil? %>
      <% @renderme.each do |item|%>
        <tr>
          <td><a id="item[id]" href="<%= view_path(item: item['id']) %>"> <%= item["name"] %></a></td>
          <td><a id="item[id]" href="<%= view_path(item: item['id']) %>"> R$ <%= item["price"]%>0</a></td>
          <td><%= link_to "Deletar", delete_path(item: item["id"]), method: :delete %></td>
          <td><%= link_to "Editar", edit_path(item: item["id"]) %></td>
        </tr>
      <% end %>
    <% end %>
  </table>
</div>

<div class="items">
  <div class="form_field">
    <form action="/" method="GET">
      <input type="submit" class="back_btn" value="Cadastrar novo produto"/>
    </form>
  </div>
</div>
