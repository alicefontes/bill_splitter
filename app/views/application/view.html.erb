<h1>
  Bill Splitter
</h1>

<h2>
  Item selecionado
</h2>

<div class="show_product">
  <table class="product_table">
    <% unless @single_product.nil? %>
    <tr>
      <th>Produto</th>
      <td><%= @single_product["name"] %></td>
    </tr>
    <tr>
      <th>Preço</th>
      <td><%= @single_product["price"] %></td>
    </tr>
    <tr>
      <th>Quantidade</th>
      <td><%= @single_product["quantity"] %></td>
    </tr>
    <tr>
      <th>Número de pessoas</th>
      <td><%= @single_product["number_of_people_sharing"] %></td>
    </tr>
    <% end %>
  </table>
</div>

<div class="btn_class">
  <form action=<%= list_path %> method="GET">
    <input type="submit" class="back_btn" value="Voltar para lista"/>
  </form>
</div>

<div class="btn_class">
  <form action="/" method="GET">
    <input type="submit" class="back_btn" value="Cadastrar novo produto"/>
  </form>
</div>
