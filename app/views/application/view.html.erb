    </tr>
    <tr>
      <th>Preço</th>
      <td><%= @single_product["price"] %></td>
    </tr>
    <tr>
      <th>Quantidade</th>
      <td><%= @single_product["quantity"] %></td>
    </tr>
    <tr>
