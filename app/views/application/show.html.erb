<h1 style="font-family: Verdana; color: black;">
  Bill Splitter
</h1>

<div style="font-size: 18px; font-family: Verdana;">
  <form action=<%= split_path %> method="POST">
    <label for="item_id">Preço do item:</label>
    <input id="item_id" name="item" value="<%= @item %>" /> <br/>
    <label for="quantidade_id">Quantidade:</label>
    <input id="quantidade_id" name="quantidade" value="<%= @quantidade%>" /> <br/>
    <label for="numPessoas_id">Número de pessoas a dividir:</label>
    <input id="numPessoas_id" name="numPessoas" value="<%= @numPessoas%>" /> <br/> <br/>
    <input type="submit" class="btn" value="Split!"
    style="padding: 14px; font-family: Verdana; font-size: 15px;
    border-radius: 10px; background-color: #00a3cc; color: white; border: 2px solid #53ff1a;" />  <br/> <br/>
    <span style="font-weight: bold; font-size:20px;">
      Total para cada um: <span style="color: #00a3cc;"><%= @resposta %></span>
    </span>
  </form>
</div>
